
@using Tourism.Shared.ViewModels.Article


<div class="card">
    <div class="card-title">@ArticleModel.Title</div>
    <div class="card-body">
        <div>
            @ArticleModel.Content
        </div>
    </div>
    <div class="card-footer">
        <div class="article-metainfo">
            <div class="left">
                <p>@ArticleModel.Created</p>
                <p>Чат <span>@ArticleModel.CountReplies</span></p>
            </div>
            <div class="right">
                <p>@ArticleModel.Author</p>
            </div>          
        </div>     
    </div>
</div>

@code {

    [Parameter]
    public ArticleViewModel ArticleModel { get; set; }
}
